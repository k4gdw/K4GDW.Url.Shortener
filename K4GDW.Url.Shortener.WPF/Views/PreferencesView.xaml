<Window x:Class="Views.PreferencesView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Height="161"
		Title="Preferences"
		Width="300" SizeToContent="WidthAndHeight">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5,10,5,0" HorizontalAlignment="Left" Width="280">
			<TextBlock Margin="0,0,10,0" TextAlignment="Right" Width="70">Bit.Ly Login:</TextBlock>
			<TextBox Name="BitLyApiLogin" Margin="0,0,0,0" HorizontalAlignment="Left" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5,10,0,0" HorizontalAlignment="Left" Width="280">
			<TextBlock Margin="0,0,10,0" TextAlignment="Right" Width="70">Bit.Ly Key:</TextBlock>
			<TextBox Name="BitLyApiKey" Margin="0,0,0,0" Width="200" HorizontalAlignment="Left"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal" Margin="5,10,5,0" HorizontalAlignment="Center" Width="Auto">
			<Button Name="Save" Content="Save" Margin="0,0,5,0" Padding="5" />
			<Button Name="Cancel" Content="Cancel" Margin="5,0,0,0" Padding="5"/>
		</StackPanel>
	</StackPanel>
</Window>
